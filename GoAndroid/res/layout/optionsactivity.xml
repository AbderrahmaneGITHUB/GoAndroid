<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/herbe"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp" >

       <TextView 
            android:id="@+id/titre_option"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Options"
            android:textColor="#000"
            android:textSize="40dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/fond_option"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/option_musique"
            android:layout_width="119dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Musique"
            android:textColor="#000"
            android:textSize="25dp" />

        <Button
            android:id="@+id/musique_non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_non"
            android:onClick="couper_musique" />

        <Button
            android:id="@+id/musique_oui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_oui"
            android:layout_marginLeft="30dp"
            android:onClick="activer_musique" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/fond_option"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/option_son"
            android:layout_width="119dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Sons"
            android:textColor="#000"
            android:textSize="25dp" />

        <Button
            android:id="@+id/son_non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_non"
            android:onClick="couper_son" />

        <Button
            android:id="@+id/son_oui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_oui"
            android:layout_marginLeft="30dp"
            android:onClick="activer_son" />
    </LinearLayout>

</LinearLayout>
